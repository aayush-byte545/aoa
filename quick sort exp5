#include <stdio.h>
#include <stdlib.h>

void minmax(int *arr, int size) {
    int min = arr[0], max = arr[0];

    for (int i = 1; i < size; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }

        if (arr[i] < min) {
            min = arr[i];
        }
    }

    printf("Maximum: %d, Minimum: %d\n", max, min);
}

void display(int *arr, int size) {
    for (int i = 0; i < size; i++) {
        printf(" %d ", arr[i]);
    }
    printf("\n");
}

int *input(int size) {
    int *arr = (int *)malloc(sizeof(int) * size);
    if (arr == NULL) {
        printf("Memory allocation failed.\n");
        exit(1);
    }

    for (int i = 0; i < size; i++) {
        printf("Enter %d'th element: ", i + 1);
        scanf("%d", &arr[i]);
    }

    return arr;
}

int getSize() {
    int sz;
    printf("Enter size of array: ");
    scanf("%d", &sz);
    return sz;
}

int main() {
    int sz = getSize();
    int *arr = input(sz);

    display(arr, sz);
    minmax(arr, sz);

    free(arr); // always free memory after use
    return 0;
}


op-
Enter size of array: 5
Enter 1'th element: 36
Enter 2'th element: 23
Enter 3'th element: 76
Enter 4'th element: 84
Enter 5'th element: 38
 36  23  76  84  38 
Maximum: 84, Minimum: 23
